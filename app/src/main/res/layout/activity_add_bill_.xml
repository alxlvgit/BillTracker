<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="match_parent"
    android:background="@drawable/p1"
    tools:context=".Modify_Activity">

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="match_parent"
        android:layout_height="137dp"
        android:layout_centerInParent="true"
        app:srcCompat="@drawable/calculator" />

    <TextView
        android:id="@+id/textView2"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_above="@+id/billInput"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="90dp"
        android:layout_marginRight="90dp"
        android:layout_marginBottom="-4dp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:gravity="center"
        android:text="Enter your bill below"
        android:textAllCaps="false"
        android:textColor="#F9FBE7"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/kreon_light" />

    <com.google.android.material.bottomnavigation.BottomNavigationView
        android:id="@+id/bottom_navigation"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="0dp"
        app:itemBackground="@color/design_default_color_primary"
        app:itemIconTint="@color/selector"
        app:itemTextColor="@color/selector"
        app:menu="@menu/menu_navigation" />

    <EditText
        android:id="@+id/billInput"
        android:layout_width="230dp"
        android:layout_height="35dp"
        android:layout_above="@+id/button"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="99dp"
        android:layout_marginRight="99dp"
        android:layout_marginBottom="34dp"
        android:background="@android:drawable/editbox_background"
        android:ems="10"
        android:gravity="end"
        android:hint="$"
        android:inputType="number|numberDecimal"
        android:textColor="#131313" />

    <Button
        android:id="@+id/button"
        android:layout_width="309dp"
        android:layout_height="69dp"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentBottom="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="76dp"
        android:layout_marginRight="76dp"
        android:layout_marginBottom="71dp"
        android:background="@drawable/b2"
        android:text="Add bill"
        android:textColor="#F9FBE7" />

    <Button
        android:id="@+id/monthButton"
        android:layout_width="309dp"
        android:layout_height="69dp"
        android:layout_above="@+id/choose_txt"
        android:layout_alignParentEnd="true"
        android:layout_alignParentRight="true"
        android:layout_centerHorizontal="true"
        android:layout_marginEnd="51dp"
        android:layout_marginRight="51dp"
        android:layout_marginBottom="-4dp"
        android:background="@drawable/b2"
        android:text="Select date"
        android:textColor="#F9FBE7"
        android:textSize="18sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="230dp"
        android:layout_height="57dp"
        android:layout_above="@+id/textView2"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginBottom="194dp"
        android:background="@drawable/downsquared"
        android:dropDownWidth="match_parent"
        android:foreground="@drawable/downsquared"
        android:gravity="center"
        android:spinnerMode="dropdown" />

    <TextView
        android:id="@+id/choose_txt"
        android:layout_width="230dp"
        android:layout_height="60dp"
        android:layout_above="@+id/spinner"
        android:layout_alignParentStart="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginStart="91dp"
        android:layout_marginLeft="91dp"
        android:layout_marginBottom="-10dp"
        android:background="@android:drawable/dialog_holo_dark_frame"
        android:gravity="center"
        android:text="Categories"
        android:textColor="#F9FBE7"
        android:textSize="18sp"
        android:textStyle="bold"
        app:fontFamily="@font/kreon_light" />


</RelativeLayout>